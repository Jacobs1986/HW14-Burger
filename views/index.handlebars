<h1>BURGERS!</h1>

<ul>
    {{#each burger}}
    <li>
        {{burger_name}}
    </li>
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="bn">Burger Name:</label>
        <input type="text" id="bn" name="name">
    </div>
    <button type="submit">Add Burger</button>
</form>