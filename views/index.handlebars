<div class="container-fluid">
    <h1>Eat Da Burger</h1>
</div>

<div class="container center">
    <h2>Add a Burger</h2>
    <form class="create-form">
        <div class="form-group">
            <label for="bn">Burger Name:</label>
            <input type="text" id="bn" name="name">
            <button type="submit">Add Burger</button>
        </div>
    </form>
</div>

<hr>

<div class="container">
    <div class="row">
        <div class="col">
            <h3>Burgers You Made</h3>
            <ul>
                {{#each burger}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col">
            <h3>Devoured</h3>
            <ul>
                {{#each burger}}
                {{#if devoured}}
                <li>
                    {{burger_name}}
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>